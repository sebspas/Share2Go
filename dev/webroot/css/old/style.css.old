@charset "utf-8";

@font-face {
    font-family: "League";
    src: url('../fonts/leaguegothic-italic-webfont.ttf');
}

@font-face {
    font-family: "Droid";
    src: url('../fonts/DroidSans.ttf');
}

@font-face {
    font-family: "Nova";
    src: url('../fonts/ProximaNovaRegular.otf');
}

*{outline: none; margin: 0; padding: 0; font-family: Nova;}

html {
	background: url('../img/TestBackground.jpg') no-repeat 50% 50% fixed;
	background-size: cover;
	text-align: justify;
}


#menu {
	display: block;
	width: 100%;
	height: 65px;
	position: fixed;
	top: 0;
	background: rgba(52,73,94,0.97);
	z-index: 5;
}


#logo {
	display: block;
	float: left;
	width: 65px;
	height: 65px;
	padding: 0 10px;
	background: url('../img/logo1.png') no-repeat 50% 50% #7f8c8d;
	background-size: 81%;

	transition-duration: 0.5s;
}

#logo a {
	display: block;
	width: auto;
	height: 70px;
}

#search {
	display: inline-block;
	float: right;
	width: 70px;
	height: 70px;
	background: url('../img/search.png') no-repeat 0% 0%;
	background-size: 100%;

	transition-duration: 0.5s;
}

#user {
	display: inline-block;
	float: right;
	width: 70px;
	height: 70px;
	background: url('../img/user.png') no-repeat 0% 0%;
	background-size: 100%;

	transition-duration: 0.5s;
}

#logo:hover {
	background-color: transparent;
}

#menu nav {
	display: inline-block;
}

#menu nav ul {
	display: block;

}

#menu nav ul li {
	display: inline-block;
	height: 70px;
	margin: 0 20px;
	list-style: none;
}

#menu nav ul li a {
	display: block;
	width: auto;
	height: 70px;
	color: #95a5a6;
	line-height: 70px;
	font-size: 1.8em;
	font-family: League;
	text-decoration: none;

	transition-duration: 0.5s;
}

#menu nav ul li a:hover {
	color: #f8f8f8;
}


#main {
	display: block;
	width: auto;
	min-height: 100vh;
	margin-top: 100px;
}

h1 {
	font-family: Droid;
}

footer {
	display: block;
	width: auto;
	min-height: 100px;
	margin-top: 30px;
	background: rgba(239,239,239, 0.90);
}

footer hr {
	display: block;
	height: 4px;
	/*background-color: #34495e;*/
	border: none;
	box-shadow: 0px -3px 4px #7f8c8d;
}

footer .container {
	background: none;
	box-shadow: none;
}


.logo {
	display: block;
	float: left;
	width: 100px;
	height: 100px;
	background: url('../img/logo.png') no-repeat 0% 0%;
	background-size: 100%;
}


.container {
	display: block;
	width: auto;
	height: auto;
	margin: 0 auto;
	margin-top: 15px;
	padding: 20px;
	background: rgba(239,239,239, 0.95);
	box-shadow: 0px 0px 4px #999;
}

.row {
	display: block;
	width: 70%;
	margin: 25px auto;
}

.cols3 {
	display: inline-block;
	width: 23%;
	margin: 0 15px;
}

@media screen and (max-width: 800px) {

	html {
		background: none;
	}

	#logo {
		background-color: #34495e;
	}

	#menu {
		background: #34495e;
	}

	#menu nav {
		display: none;
		position: absolute;
		top: 65px;
		width: 100%;
		background: #34495e;

	}

	#menu nav ul li a {
		
	}

	.container {
		display: block;
		width: auto;
		height: auto;
		margin: 25px 0;
		padding: 20px;

	}

	.row {
		display: block;
		width: auto;
		margin: 25px auto;
	}

	.cols3 {
		display: block;
		width: 100%;
		margin: 15px 0;
	}


}