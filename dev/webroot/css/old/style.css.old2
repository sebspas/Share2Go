#main {
	display: block;
	width: auto;
	min-height: 100vh;
	margin-top: 100px;
}

h1 {
	font-family: Droid;
}

footer {
	display: block;
	width: auto;
	min-height: 100px;
	margin-top: 30px;
	background: rgba(239,239,239, 0.90);
}

footer hr {
	display: block;
	height: 4px;
	/*background-color: #34495e;*/
	border: none;
	box-shadow: 0px -3px 4px #7f8c8d;
}

footer .container {
	background: none;
	box-shadow: none;
}


.logo {
	display: block;
	float: left;
	width: 100px;
	height: 100px;
	background: url('../img/logo.png') no-repeat 0% 0%;
	background-size: 100%;
}


.container {
	display: block;
	width: auto;
	height: auto;
	margin: 0 auto;
	margin-top: 15px;
	padding: 20px;
	background: rgba(239,239,239, 0.95);
	box-shadow: 0px 0px 4px #999;
}

.row {
	display: block;
	width: 70%;
	margin: 25px auto;
}

.cols3 {
	display: inline-block;
	width: 23%;
	margin: 0 15px;
}

@media screen and (max-width: 800px) {

	html {
		background: none;
	}

	#logo {
		background-color: #34495e;
	}

	#menu {
		background: #34495e;
	}

	#menu nav {
		display: none;
		position: absolute;
		top: 65px;
		width: 100%;
		background: #34495e;

	}

	#menu nav ul li a {
		
	}


	#search {
	display: inline-block;
	float: right;
	width: 70px;
	height: 70px;
	background: url('../img/search.png') no-repeat 0% 0%;
	background-size: 100%;

	transition-duration: 0.5s;
}

#user {
	display: inline-block;
	float: right;
	width: 70px;
	height: 70px;
	background: url('../img/user.png') no-repeat 0% 0%;
	background-size: 100%;

	transition-duration: 0.5s;
}

	.container {
		display: block;
		width: auto;
		height: auto;
		margin: 25px 0;
		padding: 20px;

	}

	.row {
		display: block;
		width: auto;
		margin: 25px auto;
	}

	.cols3 {
		display: block;
		width: 100%;
		margin: 15px 0;
	}


}